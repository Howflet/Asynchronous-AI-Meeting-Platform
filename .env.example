# AÂ²MP Environment Configuration Template
# Copy this file to .env and fill in your values

# ================================
# AI API Configuration (REQUIRED)
# ================================
# Get your API key from: https://aistudio.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODERATOR_API_KEY=your_gemini_api_key_here

# ================================
# Application Configuration
# ================================
# Backend server port
PORT=4000

# Frontend server port (for development)
FRONTEND_PORT=3000

# Host authentication password
HOST_PASSWORD=12345

# JWT Secret for authentication
JWT_SECRET=c275f933fa748eaf56e7649c3d73e4187787ab13f02086acc8e683264321555387018acbd7559cc2c84ea6ebebec098f48231f4062cc912a89df924f1e26bc628

# ================================
# Meeting Engine Settings
# ================================
# Maximum conversation turns before forcing conclusion
MAX_TURNS_PER_MEETING=25

# Engine tick interval in milliseconds (how often to process turns)
ENGINE_TICK_MS=8000

# ================================
# CORS Configuration
# ================================
# Allowed frontend origins (comma-separated)
CORS_ORIGIN=http://localhost:3000

# ================================
# Email Configuration (Optional)
# ================================
# SMTP settings for sending invitation emails
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
MAIL_FROM=a2mp@example.com

# ================================
# Rate Limiting (Gemini Free Tier)
# ================================
# Requests per minute
RATE_LIMIT_RPM=15

# Tokens per minute
RATE_LIMIT_TPM=1000000

# Requests per day
RATE_LIMIT_RPD=1500

# ================================
# Development Settings (Optional)
# ================================
# Enable development mode features
# DEV_MODE=true

# Next.js Configuration
NEXT_TELEMETRY_DISABLED=1
NEXT_PUBLIC_VITE_API_BASE_URL=http://localhost:4000
NEXT_PUBLIC_HOST_PASSWORD=12345

# ================================
# Web Search & Citations (Optional)
# ================================
# Enable persona web search and citations using Google Programmable Search (CSE)
# Get an API key: https://developers.google.com/custom-search/v1/overview
# Create a CSE and get the CX: https://programmablesearchengine.google.com/
ENABLE_PERSONA_WEB_SEARCH=false
GOOGLE_CSE_API_KEY=
GOOGLE_CSE_CX=

# Optional tuning
# Maximum results to fetch per query (default 4)
MAX_SEARCH_RESULTS=4
# Cache TTL in ms for identical queries (default 600000 = 10 minutes)
SEARCH_CACHE_TTL_MS=600000
# Requests per minute guard for CSE calls (default 10)
SEARCH_RPM_LIMIT=10
